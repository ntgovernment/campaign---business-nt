{
    "author": "Brainium Labs <dev@brainiumlabs.com.au>",
    "name": "businessnt2024",
    "version": "1.0.0",
    "description": "Bootstrap v5 Starter Template",
    "homepage": "index.php",
    "browserslist": [
        "last 2 versions",
        "> 5%"
    ],
    "dependencies": {
        "@popperjs/core": "^2.10.2",
        "bootstrap": "^5.3.2",
        "jquery": "^3.7.1"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.0",
        "browser-sync": "^3.0.2",
        "browserify": "^17.0.0",
        "bundle-minify": "^1.0.0",
        "concat": "^1.0.3",
        "husky": "^8.0.3",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.1.0",
        "postcss": "^8.3.11",
        "postcss-cli": "^9.1.0",
        "prettier": "^2.4.1",
        "purgecss": "^4.0.3",
        "sass": "^1.69.0",
        "uglify-js": "^3.14.3"
    },
    "engines": {
        "node": ">=16"
    },
    "keywords": [
        "boilerplate",
        "template"
    ],
    "license": "UNLICENSED",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@bitbucket.org:brainiumlabs/brainium-starter-template.git"
    },
    "scripts": {
        "deploy-to-staging": "node ./helpers/deploy.js",
        "check-husky": "if [ ! -d .husky ]; then npm run prepare-husky; fi",
        "prepare-husky": "husky install && npx husky add .husky/pre-commit 'npm run build:filebridge && git add build/'",
        "static-build:purgecss": "purgecss --css dist/css/main.css --content dist/js/bundle.js dist/*.php --output dist/css/main.css",
        "static-build:autoprefix": "postcss --no-map -u autoprefixer -r dist/css/main.css",
        "static-build:autoprefix:dev": "postcss -u autoprefixer -r dist/css/main.css",
        "static-build:css": "sass --style compressed --no-source-map \"./src/css/scss/main.scss\" \"./dist/css/main.css\" && concat -o ./dist/css/plugins.css ./src/css/plugins/*.css",
        "static-build:css:dev": "sass --style expanded \"./src/css/scss/main.scss\" \"./dist/css/main.css\" && concat -o ./dist/css/plugins.css ./src/css/plugins/*.css",
        "static-build:php": "cp -r ./src/site/includes ./dist && find ./src/pages -name '*.php' -type f -exec cp {} dist \\;",
        "static-build:assets": "cp -r ./src/assets ./dist",
        "static-build:js": "browserify ./src/js/bootstrap.js > ./dist/js/bootstrap.js && concat -o ./dist/js/bundle.js ./dist/js/bootstrap.js ./src/js/utils.js ./src/js/**/*.js ./src/js/functions.js && rm -rf ./dist/js/bootstrap.js && uglifyjs ./dist/js/bundle.js --compress -o ./dist/js/bundle.js",
        "static-build:js:dev": "browserify ./src/js/bootstrap.js > ./dist/js/bootstrap.js && concat -o ./dist/js/bundle.js ./dist/js/bootstrap.js ./src/js/utils.js ./src/js/**/*.js ./src/js/functions.js && rm -rf ./dist/js/bootstrap.js",
        "static-build:dev": "npm run clean && npm run static-build:css:dev && npm run static-build:autoprefix:dev && mkdir ./dist/js && npm run static-build:js:dev && npm run static-build:assets && npm run static-build:php",
        "static-build:prod": "npm run clean && npm run static-build:css && npm run static-build:autoprefix && mkdir ./dist/js && npm run static-build:js && npm run static-build:assets && npm run static-build:php && npm run static-build:purgecss",
        "static-watch:sass": "onchange \"./src/css/scss/**/*.scss\" -- npm run static-build:css:dev && npm run static-build:autoprefix",
        "static-watch:js": "onchange \"./src/js/**/*.js\" -- npm run static-build:js:dev",
        "static-watch:php": "onchange \"./src/site/**/*.php\" -- npm run static-build:php",
        "static-dev": "npm run static-build:dev && npm-run-all --parallel serve static-watch:sass static-watch:js static-watch:php",
        "static-prod": "npm run static-build:prod && npm-run-all --parallel",
        "build:purgecss": "purgecss --css dist/css/main.css --content dist/js/bundle.js dist/*.php --output dist/css/main.css",
        "build:autoprefix": "postcss -u autoprefixer -r dist/css/main.css --no-map ",
        "build:autoprefix:dev": "postcss -u autoprefixer -r dist/css/main.css",
        "build:css": "sass --no-source-map --style expanded \"./src/css/scss/main.scss\" \"./dist/css/main.css\" && concat -o ./dist/css/plugins.css ./src/css/plugins/*.css",
        "build:css:dev": "sass --style expanded \"./src/css/scss/main.scss\" \"./dist/css/main.css\" && concat -o ./dist/css/plugins.css ./src/css/plugins/*.css",
        "build:php": "cp -r ./src/site/includes ./dist && find ./src/site/pages -name '*.php' -type f -exec cp {} dist \\;",
        "build:assets": "cp -r ./src/assets ./dist",
        "build:matrix": "cp -r ./dist/assets/images ./dist/css/mysource_files",
        "build:js": "browserify ./src/js/bootstrap.js --outfile ./dist/js/bootstrap.js && cp -R ./src/js/plugins ./dist/js && browserify ./src/js/utils.js --outfile ./dist/js/utils.js && browserify ./src/js/functions.js --outfile ./dist/js/functions.js && uglifyjs ./dist/js/bootstrap.js --compress -o ./dist/js/bootstrap.min.js",
        "build:js:dev": "browserify ./src/js/bootstrap.js > ./dist/js/bootstrap.js && concat -o ./dist/js/bundle.js ./dist/js/bootstrap.js ./src/js/utils.js ./src/js/**/*.js ./src/js/functions.js && rm -rf ./dist/js/bootstrap.js",
        "build:dev": "npm run clean && npm run build:css:dev && npm run build:autoprefix:dev && mkdir ./dist/js && npm run build:js:dev && npm run build:assets && npm run build:matrix && npm run build:php && npm run build:filebridge",
        "build:prod": "npm run clean && npm run build:css && npm run build:autoprefix && mkdir ./dist/js && npm run build:js && npm run build:assets && npm run build:matrix && npm run build:php",
        "clean:filebridge": "rm -rf ./build",
        "build:autoprefix:filebridge": "postcss -u autoprefixer -r build/css/main.css --no-map ",
        "build:css:filebridge": "sass --no-source-map --style compressed \"./src/css/scss/main.scss\" \"./build/css/main.css\" && sass --no-source-map --style compressed \"./src/css/scss/squizComponents.scss\" \"./build/css/squizComponents.css\" && concat -o ./build/css/plugins.css ./src/css/plugins/*.css",
        "build:js:filebridge": "npm run build-compress:bootstrapjs && npm run build-compress:pluginsjs && concat -o ./build/js/bundle.js ./src/js/utils.js ./src/js/functions.js && uglifyjs ./build/js/bundle.js --compress -o ./build/js/bundle.js",
        "build-compress:bootstrapjs": "browserify ./src/js/bootstrap.js > ./build/js/bootstrap.js && uglifyjs ./build/js/bootstrap.js --compress -o ./build/js/bootstrap.js",
        "build-compress:pluginsjs": "node helpers/build-plugins.js --uglify --output ./build/js/plugins.js",
        "build:cssimages:filebridge": "mkdir -p ./build/assets && cp -r ./src/assets/css-images/ ./build/assets/css-images",
        "build:fonts:filebridge": "cp -r ./src/assets/fonts/ ./build/assets/fonts",
        "build:filebridge": "npm run clean:filebridge && npm run build:css:filebridge && npm run build:autoprefix:filebridge && mkdir ./build/js && npm run build:js:filebridge && npm run build:cssimages:filebridge && npm run build:fonts:filebridge",
        "watch:sass": "onchange \"./src/css/scss/**/*.scss\" -- npm run build:css:dev && npm run build:autoprefix",
        "watch:js": "onchange \"./src/js/**/*.js\" -- npm run build:js:dev",
        "watch:php": "onchange \"./src/site/**/*.php\" -- npm run build:php",
        "dev": "npm run check-husky && npm run build:dev && npm-run-all --parallel serve watch:sass watch:js watch:php",
        "prod": "npm run check-husky && npm run build:prod && npm-run-all --parallel",
        "clean": "rm -rf ./dist",
        "serve": "browser-sync start --proxy $npm_package_name.ddev.site ./dist -w --files \"./dist/**/*.php\" \"./dist/css/main.css\" \"./dist/js/bundle.js\"",
        "prettier": "prettier --write ./src/"
    }
}
